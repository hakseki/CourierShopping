      <text>实名认证</text>
    </view>
    <view class="menu-item">
      <image src="/images/customer service.png" alt="客服中心"></image>
      <text>客服中心</text>
    </view>
    <view class="menu-item">
      <image src="/images/courier.png" alt="专属快递员"></image>
