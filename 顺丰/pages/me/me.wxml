<view class="container">
  <view class="header">
    <button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
      <image class="avatar" src="{{userInfo.avatarUrl || '/images/default_avatar.png'}}"></image>
    </button>
    <view class="nickname-wrapper">
      <text class="phone">{{userInfo.nickName}}</text>
    </view>
    <text class="membership">黑钻会员</text>
    <text class="points">积分 15</text>
  </view>
  <view class="info">
    <text class="info-item">优惠券 12</text>
    <text class="info-item">新速运运卡 0</text>
    <text class="info-item">我的兑换 0</text>
    <text class="info-item">碳能量 0</text>
  </view>
<view class="menu">
    <view class="menu-item">
      <image src="/images/address.png" alt="地址簿"></image>
      <text>地址簿</text>
    </view>
    <view class="menu-item">
      <image src="/images/application.png" alt="发单申请"></image>
      <text>发单申请</text>
    </view>
    <view class="menu-item">
      <image src="/images/paying.png" alt="待支付"></image>
      <text>待支付</text>
    </view>
    <view class="menu-item">
      <image src="/images/ssearch.png" alt="服务查询"></image>
